<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="รายละเอียดการเดินทาง"
        android:textSize="24dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/Numberbus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="สายรถประจำทาง : 56"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Recommend"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/Nowbus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ชื่อป้ายรถประจำทางปัจจุบัน :"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Numberbus"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/Namebus1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="มหาวิทยาลัยราฏภัฏสวนสุนันทา"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Nowbus"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/Nextbus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ชื่อป้ายรถประจำทางถัดไป :"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Namebus1"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/Namebus2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="อนุเสาวรีชัยสมอรภูมิ"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/Nextbus"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/Numberbusstop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="เหลือจำนวนป้ายที่ต้องผ่านอีก 9 ป้าย"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Namebus2"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="สถานะการเดินทาง :"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Numberbusstop"
        tools:layout_editor_absoluteX="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="ออกจาก
แอปพลิเคชั่น"
            android:textSize="24dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="368dp" />

        <Button
            android:id="@+id/Back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="ย้อนกลับ
หน้าหลัก"
            android:textSize="24dp"
            tools:layout_editor_absoluteX="195dp"
            tools:layout_editor_absoluteY="368dp" />
    </LinearLayout>

</LinearLayout>